{
  "name": "docsanitizer",
  "version": "1.0.0",
  "description": "Desktop application for detecting and masking sensitive information in documents",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && electron-builder",
    "build:vite": "tsc -b && vite build",
    "preview": "vite preview",
    "electron:dev": "vite build && electron .",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "npm run build:vite && npx playwright test",
    "test:ci": "npm run build:vite && xvfb-run --auto-servernum -- npx playwright test",
    "test:headed": "npm run build:vite && npx playwright test --headed",
    "test:debug": "npm run build:vite && npx playwright test --debug",
    "test:ui": "npm run build:vite && npx playwright test --ui",
    "test:file-uploader": "npm run build:vite && npx playwright test file-uploader",
    "test:review-panel": "npm run build:vite && npx playwright test review-panel",
    "test:config-modal": "npm run build:vite && npx playwright test config-modal",
    "test:detection": "npm run build:vite && npx playwright test detection",
    "test:workflows": "npm run build:vite && npx playwright test workflows",
    "test:report": "npx playwright show-report"
  },
  "keywords": [
    "electron",
    "document",
    "sanitizer",
    "pii",
    "privacy",
    "masking"
  ],
  "author": {
    "name": "iYassr",
    "email": "iyassr@users.noreply.github.com"
  },
  "license": "MIT",
  "dependencies": {
    "@codemirror/commands": "^6.10.1",
    "@codemirror/language": "^6.11.3",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.39.4",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "compromise": "^14.14.4",
    "daisyui": "^5.5.14",
    "docx": "^9.5.1",
    "electron-store": "^11.0.0",
    "exceljs": "^4.4.0",
    "lucide-react": "^0.561.0",
    "mammoth": "^1.11.0",
    "next-themes": "^0.4.6",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^2.4.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tesseract.js": "^7.0.0",
    "zustand": "^5.0.5"
  },
  "optionalDependencies": {
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.10",
    "@types/node": "^25.0.3",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.21",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-playwright-helpers": "^2.0.1",
    "eslint": "^9.28.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "shadcn": "^3.6.2",
    "tailwindcss": "^4.1.10",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.33.1",
    "vite": "^7.3.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
