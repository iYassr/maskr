{
  "name": "docsanitizer",
  "version": "1.1.0",
  "description": "A privacy-focused desktop app for detecting and masking sensitive information in documents before sharing with AI or other parties",
  "main": "dist-electron/main.js",
  "type": "module",
  "homepage": "https://github.com/iYassr/DocSanitizer",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iYassr/DocSanitizer.git"
  },
  "bugs": {
    "url": "https://github.com/iYassr/DocSanitizer/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && electron-builder",
    "build:vite": "tsc -b && vite build",
    "preview": "vite preview",
    "electron:dev": "vite build && electron .",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "npm run build:vite && npx playwright test",
    "test:headed": "npm run build:vite && npx playwright test --headed"
  },
  "keywords": [
    "electron",
    "desktop",
    "document",
    "sanitizer",
    "pii",
    "privacy",
    "masking",
    "redaction",
    "sensitive-data",
    "data-protection",
    "ocr",
    "pdf",
    "docx",
    "local-first"
  ],
  "author": {
    "name": "iYassr",
    "url": "https://github.com/iYassr"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.19.0 || >=22.12.0"
